ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/mindlyf_lyfbot

# Redis
REDIS_URL=redis://redis:6379/0

# JWT Secret (must match auth service)
JWT_SECRET=mindlyf-auth-secret-key-dev

# Service URLs
AUTH_SERVICE_URL=http://auth-service:3001
AI_SERVICE_URL=http://ai-service:8000
JOURNAL_SERVICE_URL=http://journal-service:8001
RECOMMENDER_SERVICE_URL=http://recommender-service:8002
NOTIFICATION_SERVICE_URL=http://notification-service:3005

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# CORS
CORS_ORIGINS=http://localhost:3000

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=MindLyf LyfBot Service

# Security
SECRET_KEY=mindlyf-lyfbot-secret-key-dev
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Bot Configuration
BOT_NAME=LyfBot
BOT_PERSONALITY=supportive_therapist
MAX_CONVERSATION_LENGTH=50
CONTEXT_WINDOW_SIZE=10

# Crisis Detection
CRISIS_DETECTION_ENABLED=true
CRISIS_KEYWORDS=suicide,kill,hurt,harm,die,death
CRISIS_ESCALATION_ENABLED=true

# Rate Limiting
MAX_MESSAGES_PER_HOUR=100
CONVERSATION_TIMEOUT_MINUTES=30