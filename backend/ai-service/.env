# Environment
ENVIRONMENT=development

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=MindLyf AI Service

# CORS
CORS_ORIGINS=http://localhost:3000

# Security
SECRET_KEY=mindlyf-ai-secret-key-dev
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Database - Updated to use container name
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/mindlyf_ai

# Redis - Updated to use container name
REDIS_URL=redis://redis:6379/0

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION=
DEFAULT_MODEL=gpt-4

# Service URLs - Updated to use container names
AUTH_SERVICE_URL=http://auth-service:3001
NOTIFICATION_SERVICE_URL=http://notification-service:3005
JOURNAL_SERVICE_URL=http://journal-service:8001
RECOMMENDER_SERVICE_URL=http://recommender-service:8002
LYFBOT_SERVICE_URL=http://lyfbot-service:8003

# JWT Secret (must match auth service)
JWT_SECRET=mindlyf-auth-secret-key-dev

# Mental Health Settings
CRISIS_DETECTION_ENABLED=true
PHI_DETECTION_ENABLED=true
CONSENT_CHECK_ENABLED=true

# AWS Configuration
AWS_REGION=us-east-1
AWS_S3_BUCKET=mindlyf-ai-models
JWT_SECRET=mindlyf-auth-secret-key-dev