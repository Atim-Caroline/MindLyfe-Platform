# Environment
NODE_ENV=development
PORT=3004

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=mindlyfe_community
DB_SYNC=true
DB_LOGGING=true
DB_SSL=false

# JWT Configuration
JWT_SECRET=mindlyfe-auth-secret-key-dev

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Service URLs - Updated to use container names
AUTH_SERVICE_URL=http://auth-service:3001
NOTIFICATION_SERVICE_URL=http://notification-service:3005

# Encryption Configuration
ENCRYPTION_KEY=32-character-encryption-key-here

# Moderation Configuration
AUTO_MODERATION_ENABLED=true
SENSITIVE_CONTENT_THRESHOLD=0.7
MAX_REPORTS_BEFORE_REVIEW=3
MAX_POSTS_PER_DAY=10
MAX_COMMENTS_PER_DAY=50

# Privacy Configuration
DEFAULT_POST_RETENTION_DAYS=365
DEFAULT_COMMENT_RETENTION_DAYS=180
DEFAULT_MESSAGE_RETENTION_DAYS=90
ANONYMIZATION_ENABLED=true

# Rate Limiting
RATE_LIMIT_POSTS_MAX=10
RATE_LIMIT_COMMENTS_MAX=50
RATE_LIMIT_REACTIONS_MAX=100

# CORS Configuration
CORS_ORIGIN=*

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10