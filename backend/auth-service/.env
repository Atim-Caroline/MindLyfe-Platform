# Environment
NODE_ENV=development
PORT=3002

# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=mindlyfe_auth
DB_SYNCHRONIZE=true
DB_LOGGING=true
DB_SSL=false

# JWT Configuration - Standardized
JWT_SECRET=mindlyfe-auth-secret-key-dev
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=mindlyfe-refresh-secret
JWT_REFRESH_EXPIRES_IN=7d
JWT_SERVICE_SECRET=mindlyfe-service-secret-key-dev

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Rate limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10
AUTH_THROTTLE_TTL=60
AUTH_THROTTLE_LIMIT=5

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Service URLs
NOTIFICATION_SERVICE_URL=http://notification-service:3005

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Email Configuration
EMAIL_FROM=support@mindlyfe.com
EMAIL_REPLY_TO=noreply@mindlyfe.com

# MFA Configuration
MFA_ISSUER=MindLyfe
MFA_WINDOW=1

# CORS Configuration
CORS_ORIGIN=*