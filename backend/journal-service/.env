ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/mindlyfe_journal

# Redis
REDIS_URL=redis://redis:6379/0

# JWT Secret (must match auth service)
JWT_SECRET=mindlyfe-auth-secret-key-dev

# Service URLs
AUTH_SERVICE_URL=http://auth-service:3001
AI_SERVICE_URL=http://ai-service:8000
NOTIFICATION_SERVICE_URL=http://notification-service:3005

# OpenAI (for analysis)
OPENAI_API_KEY=your-openai-api-key

# CORS
CORS_ORIGINS=http://localhost:3000

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=MindLyfe Journal Service

# Security
SECRET_KEY=mindlyfe-journal-secret-key-dev
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Analysis Settings
SENTIMENT_ANALYSIS_ENABLED=true
THEME_EXTRACTION_ENABLED=true
PRIVACY_MODE_ENABLED=true